# Environment
# Can be 'development', 'staging', or 'production'
NEXT_PUBLIC_ENVIRONMENT=development

# API Configuration
# Set to 'true' to use backend API, 'false' to use localStorage
NEXT_PUBLIC_USE_API=false

# Base URL for API requests
NEXT_PUBLIC_API_URL=http://localhost:5000

# Set to 'true' to force localStorage even if USE_API is true (for testing)
NEXT_PUBLIC_FORCE_LOCAL_STORAGE=false

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Maximum number of retry attempts for API requests
NEXT_PUBLIC_API_MAX_RETRIES=3

# Webhook base URL (environment-specific defaults will be used if not set)
# NEXT_PUBLIC_WEBHOOK_BASE_URL=http://localhost:5000/webhook

# Supabase Configuration
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-goes-here

# Application version
NEXT_PUBLIC_APP_VERSION=0.1.0

# Copy this file to .env.local and modify as needed
# Do not commit .env.local to version control